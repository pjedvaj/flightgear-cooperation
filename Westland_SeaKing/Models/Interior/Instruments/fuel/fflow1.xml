<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>fflowgauge.ac</path>
	
<animation>
  <type>scale</type>
  <x-offset>0.62</x-offset>
  <y-offset>0.62</y-offset>
  <z-offset>0.62</z-offset>
 </animation>    
    
  <animation>
    <object-name>face</object-name>
    <object-name>needle</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
            <red>   0.005 </red>
      <green> 0.03 </green>
      <blue>  0.015 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>
	
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/engines/engine[0]/fuel-flow-gph</property>
    <interpolation>
      <entry><ind>   0 </ind><dep>   0 </dep></entry>
      <entry><ind> 119 </ind><dep> 240 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
