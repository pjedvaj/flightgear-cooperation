<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

	<chase-distance-m type="double" archive="y"> -25 </chase-distance-m>

	<view n="100">
		<name>Copilot Seat View</name>
		<internal archive="y">true</internal>
		<type>lookfrom</type>
		<config>
			<from-model type="bool">true</from-model>
			<ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
			<x-offset-m archive="y">  -0.500 </x-offset-m> <!--right-->
			<y-offset-m archive="y">  0.650 </y-offset-m> <!--up-->
			<z-offset-m archive="y"> -7.200 </z-offset-m> <!--back-->
			<pitch-offset-deg> -15 </pitch-offset-deg>
			<default-field-of-view-deg> 75 </default-field-of-view-deg>
			<dynamic-view type="bool">true</dynamic-view>
		</config>
	</view>

	<view n="0">
	<name>Pilot Seat View</name>
	<internal archive="y">true</internal>
		<config>
			<x-offset-m archive="y"> 0.500 </x-offset-m> <!--right-->
			<y-offset-m archive="y">  0.650 </y-offset-m> <!--up-->
			<z-offset-m archive="y"> -7.200 </z-offset-m> <!--back-->
			<pitch-offset-deg> -15 </pitch-offset-deg>
			<default-field-of-view-deg> 75 </default-field-of-view-deg>
		</config>
	</view>

	<view n="1">
		<config>
			<target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
		</config>
	</view>

	<view n="2">
		<config>
			<target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
		</config>
	</view>

	<view n="3">
		<config>
			<target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
		</config>
	</view>

	<view n="4">
		<config>
			<target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
		</config>
	</view>

	<view n="5">
		<config>
			<target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
		</config>
	</view>

	<view n="6">
		<config>
			<target-z-offset-m archive="y" type="double"> 0 </target-z-offset-m>
		</config>
