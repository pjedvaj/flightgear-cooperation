<PropertyList>

	<path>BL-13.ac</path>

	<animation>
    	<type>material</type>
    	<object-name>BL-13.002</object-name>
    	<emission>
      		<factor-prop>/controls/armament/trigger-S13-3-L</factor-prop>
      		<red>0.12</red>
      		<green>0.05</green>
      		<blue>0.00</blue>
    	</emission>
	</animation>

	<!-- Flames -->

  	<model>
    	<name>S13flame2</name>
    	<path>Aircraft/Su-25/Models/Effects/S-5/Flame.xml</path>
    	<condition>
      		<and>
        		<property>/controls/armament/trigger-S13-3-L</property>
      		</and>
    	</condition>
    	<offsets>
      		<x-m>0.96</x-m>
      		<y-m>0.0</y-m>
      		<z-m>0.0</z-m>
      		<heading-deg>0.0</heading-deg>
      		<roll-deg>0.0</roll-deg>
      		<pitch-deg>0.0</pitch-deg>
    	</offsets>
		<overlay>
			<animation n="100">
			<type>scale</type>
			  <property>constants/zero</property>
			  <x-offset>1.0</x-offset>
			  <y-offset>0.81</y-offset>
			  <z-offset>0.81</z-offset>
			</animation>
    	</overlay>
  	</model>

  	<model>
    	<name>S5flackL1</name>
    	<path>Aircraft/Su-25/Models/Effects/S-5/Flack.xml</path>
    	<condition>
      		<and>
        		<property>/controls/armament/trigger-S13-3-L</property>
      		</and>
    	</condition>
    	<offsets>
      		<x-m>-0.75</x-m>
      		<y-m>0.0</y-m>
      		<z-m>-0.1</z-m>
      		<heading-deg>0.0</heading-deg>
      		<roll-deg>0.0</roll-deg>
      		<pitch-deg>0.0</pitch-deg>
    	</offsets>
  	</model>

	<!-- Rockets -->

	<animation>
		<object-name>rkt.001</object-name>
		<type>select</type>
		<condition>
			<greater-than>
        		<property>/controls/armament/rocketsCountS13</property>
				<value>4</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<object-name>rkt.002</object-name>
		<type>select</type>
		<condition>
			<greater-than>
        		<property>/controls/armament/rocketsCountS13</property>
				<value>3</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<object-name>rkt.003</object-name>
		<type>select</type>
		<condition>
			<greater-than>
        		<property>/controls/armament/rocketsCountS13</property>
				<value>2</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<object-name>rkt.004</object-name>
		<type>select</type>
		<condition>
			<greater-than>
        		<property>/controls/armament/rocketsCountS13</property>
				<value>1</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<object-name>rkt.005</object-name>
		<type>select</type>
		<condition>
			<greater-than>
        		<property>/controls/armament/rocketsCountS13</property>
				<value>0</value>
			</greater-than>
		</condition>
	</animation>

</PropertyList>
