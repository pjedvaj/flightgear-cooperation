<?xml version="1.0"?>

<PropertyList>

	<path>Pedals.ac</path>

	<animation>
    <type>material</type>
    <object-name>PedalLeft</object-name>
    <object-name>PedalRight</object-name>
    	<emission>
      		<red>0.05</red>
      		<green>0.03</green>
      		<blue>0.02</blue>
      		<factor-prop>controls/lighting/instruments-norm</factor-prop>
    	</emission>
      	<condition>
    		<property>/controls/power/battery</property>
    		<property>/controls/lighting/nightmode</property>
  		</condition>
  	</animation>

	<animation>
		<type>translate</type>
		<object-name>PedalLeft</object-name>
		<property>controls/flight/rudder</property>
		<factor>0.03</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>PedalRight</object-name>
		<property>controls/flight/rudder</property>
		<factor>0.03</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>PedalC</object-name>
		<property>controls/flight/rudder</property>
		<factor>6</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

</PropertyList>
