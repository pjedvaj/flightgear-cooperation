 <animation>
	 	<type>material</type> 
	 	<object-name>rp_switchbase</object-name>
	 	<object-name>rp_screws_round</object-name>
  		<specular>
   		<red>1.0</red>
   		<green>1.0</green>
   		<blue>1.0</blue>
  		</specular>
  		<shininess>105</shininess>
	</animation>

  <animation>
    <type>material</type>
    <object-name>rp_panel</object-name>
    <emission>
      	<red>0.07</red>
        <green>0.03</green>
    	<blue>0.01</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
    	<condition>
    		<property>/controls/power/battery</property>
    		<property>/controls/lighting/nightmode</property>
  		</condition>
  	</animation>

   <animation>
    <type>translate</type>
    <object-name>rp_button</object-name>
    <property>controls/flight/eng_start_btn</property>
    <factor>-0.0020</factor>
    <center>
      <x-m>-0.060636</x-m>
      <y-m>-0.004935</y-m>
      <z-m>-0.001049</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>rp_button</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/flight/eng_start_btn</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("switch2")</script>
      </binding>
      <binding>
					<command>nasal</command>
					<script>
						yasimengines.autostart();
					</script>
			</binding>
      <mod-up>
        <binding>
        <command>property-toggle</command>
        <property>controls/flight/eng_start_btn</property>
      </binding>
      </mod-up>
    </action>
    <hovered>
        <binding>
                <command>set-tooltip</command>
                <tooltip-id>engines-start-stop</tooltip-id>
                <label>Engines start/stop</label>
        </binding>
  </hovered>
    </animation>
    
  <animation>
    <type>rotate</type>
    <object-name>rp_switch.014</object-name>
    <property>/controls/power/rsbn</property>
    <offset-deg>20</offset-deg>
    <factor>-40</factor>
    <center>
      <x-m>-0.134309</x-m>
      <y-m>-0.003099</y-m>
      <z-m>-0.038611</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>rp_switch.014</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>/controls/power/rsbn</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>radiocfg.RSBN_init()</script>
      </binding>
      <binding>
        <command>nasal</command>
        <script>radiocfg.PRMG_init()</script>
      </binding>
      <binding>
        <command>nasal</command>
        <script>radiocfg.ARK_init()</script>
      </binding>
      <binding>
        <command>nasal</command>
        <script>radiocfg.COM1_init()</script>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("switch2")</script>
      </binding>
    </action>
    <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rsbn-switch-lbl</tooltip-id>
                <label>Radio %s</label>
                <property>/controls/power/rsbn</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['OFF', 'ON'];
                    return modes[arg[0]];
                </script>
            </binding>
    </hovered>
  </animation>


</PropertyList>
