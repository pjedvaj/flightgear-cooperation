 <animation>
  <type>material</type>
  <object-name>Face</object-name>
  <object-name>DA-200.Needle1</object-name>
  <object-name>DA-200.Needle2</object-name>
  <object-name>DA-200.skidball</object-name>
    <emission>
        <factor-prop>controls/lighting/instruments-norm</factor-prop>
        <red>0.8</red>
        <green>0.3</green>
        <blue>0.1</blue>
    </emission>
    <condition>
          <property>/controls/power/battery</property>
          <property>/controls/lighting/nightmode</property>
    </condition>
 </animation>

<animation>
  <type>material</type>
  <object-name>Face</object-name>
  <object-name>DA-200.Needle1</object-name>
  <object-name>DA-200.Needle2</object-name>
  <object-name>DA-200.skidball</object-name>
    <emission>
        <red>0.2</red>
        <green>0.2</green>
        <blue>0.2</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
        <condition>
        	<property>/controls/power/battery</property>
          <not>
           <property>/controls/lighting/nightmode</property>
          </not>
        </condition>
</animation>

 <animation>
  <type>shader</type>
  <shader>chrome</shader>
  <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
  <object-name>DA.glass</object-name>
 </animation>
	
 <animation>
  <type>rotate</type>
  <object-name>DA-200.Needle2</object-name>
  <property>velocities/vertical-speed-fps</property>
  <interpolation>
   <entry><ind>-200</ind><dep>-140.5</dep></entry><!--200-->
   <entry><ind>-150</ind><dep>-119.4</dep></entry><!--150-->
   <entry><ind>-100</ind><dep> -99.5</dep></entry><!--100-->
   <entry><ind> -50</ind><dep> -78.7</dep></entry><!-- 50-->
   <entry><ind> -35</ind><dep> -66.5</dep></entry>
   <entry><ind> -20</ind><dep> -49.5</dep></entry><!-- 20-->
   <entry><ind> -10</ind><dep> -33.5</dep></entry><!-- 10-->
   <entry><ind>  -5</ind><dep> -16.5</dep></entry><!--  5-->
   <entry><ind>   0</ind><dep>   0.0</dep></entry><!--  0-->
   <entry><ind>   5</ind><dep>  16.5</dep></entry><!--  5-->
   <entry><ind>  10</ind><dep>  33.5</dep></entry><!-- 10-->
   <entry><ind>  20</ind><dep>  49.5</dep></entry><!-- 20-->
   <entry><ind>  35</ind><dep>  66.5</dep></entry>
   <entry><ind>  50</ind><dep>  78.7</dep></entry><!-- 50-->
   <entry><ind> 100</ind><dep>  99.5</dep></entry><!--100-->
   <entry><ind> 150</ind><dep> 119.4</dep></entry><!--150-->
   <entry><ind> 200</ind><dep> 140.5</dep></entry><!--200-->
  </interpolation>
  <axis>
   <x>-1</x>
   <y> 0</y>
   <z> 0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>DA-200.Needle1</object-name>
  <property>instrumentation/turn-indicator/indicated-turn-rate</property>
  <factor>22.5</factor>
  <min-deg>-22.5</min-deg>
  <max-deg> 22.5</max-deg>
  <center>
   <x-m> 0.000</x-m>
   <y-m> 0.000</y-m>
   <z-m>-0.02432</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

<!--Side slip-->
 <animation>
  <type>rotate</type>
  <object-name>DA-200.skidball</object-name>
  <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
  <factor>5.4</factor>
  <min-deg>-30</min-deg>
  <max-deg> 30</max-deg>
  <center>
   <x-m>0.00</x-m>
   <y-m>0.00</y-m>
   <z-m>0.04</z-m>
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

</PropertyList>
