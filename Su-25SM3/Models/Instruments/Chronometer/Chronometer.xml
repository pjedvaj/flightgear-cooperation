<?xml version="1.0"?>

<!-- Achs-1, clock -->

<PropertyList>

  <path>achs-1.ac</path>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>30</max-m>
	</animation>

	<animation>
   <type>material</type>
   <object-name>mode_ind_flag</object-name>
   <object-name>achs-face</object-name>
   <object-name>achs-housing</object-name>
   <object-name>hour_needle</object-name>
   <object-name>min_needle</object-name>
   <object-name>sec_needle</object-name>
   <object-name>ft_hour_needle</object-name>
   <object-name>ft_min_needle</object-name>
   <object-name>timer_sec_needle</object-name>
   <object-name>timer_min_needle</object-name>
    <emission>
        <factor-prop>controls/lighting/instruments-norm</factor-prop>
        <red>0.8</red>
        <green>0.3</green>
        <blue>0.1</blue>
    </emission>
    <condition>
        	<property>/controls/power/battery</property>
          <property>/controls/lighting/nightmode</property>
    </condition>
 </animation>

 <animation>
  <type>material</type>
  <object-name>mode_ind_flag</object-name>
   <object-name>achs-face</object-name>
   <object-name>achs-housing</object-name>
   <object-name>hour_needle</object-name>
   <object-name>min_needle</object-name>
   <object-name>sec_needle</object-name>
   <object-name>ft_hour_needle</object-name>
   <object-name>ft_min_needle</object-name>
   <object-name>timer_sec_needle</object-name>
   <object-name>timer_min_needle</object-name>
   <emission>
        <red>0.2</red>
        <green>0.2</green>
        <blue>0.2</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
        <condition>
        	<property>/controls/power/battery</property>
          <not>
           <property>/controls/lighting/nightmode</property>
          </not>
        </condition>
</animation>

  <animation>
    <type>rotate</type>
    <object-name>hour_needle</object-name>
    <property>instrumentation/clock/indicated-sec</property>
    <factor>0.008333333</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>min_needle</object-name>
    <property>instrumentation/clock/indicated-sec</property>
    <factor>0.1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>sec_needle</object-name>
    <property>instrumentation/clock/indicated-sec</property>
    <factor>6</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>timer_sec_needle</object-name>
    <property>instrumentation/clock/sec_show</property>
    <factor>6</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>-0.021</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ft_hour_needle</object-name>
    <property>instrumentation/clock/inf_sec</property>
    <factor>0.008333333</factor>
    <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0174</z-m>
   </center> 
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ft_min_needle</object-name>
    <property>instrumentation/clock/inf_sec</property>
    <factor>0.1</factor>
    <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0174</z-m>
  </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
	  <type>pick</type>
	  <object-name>l-press</object-name>
	  <action>
	    <button>0</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
	       <command>property-adjust</command>
	       <property>instrumentation/clock/inf_set</property>
	       <step>1</step>
	       <min>0</min>
	       <max>1</max>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	  <action>
	    <button>1</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
  	     <command>property-adjust</command>
	       <property>instrumentation/clock/inf_set</property>
	       <step>1</step>
	       <min>0</min>
	       <max>1</max>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	</animation>

  <animation>
	  <type>pick</type>
	  <object-name>r-press</object-name>
	  <action>
	    <button>0</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
	       <command>property-adjust</command>
	       <property>instrumentation/clock/sec_set</property>
	       <step>1</step>
	       <min>0</min>
	       <max>1</max>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	  <action>
	    <button>1</button>
	    <repeatable>true</repeatable>
	    <interval-sec>0.1</interval-sec>
	     <binding>
  	     <command>property-adjust</command>
	       <property>instrumentation/clock/sec_set</property>
	       <step>1</step>
	       <min>0</min>
	       <max>1</max>
	       <wrap>false</wrap>
	     </binding>
	  </action>
	</animation>

</PropertyList> 
