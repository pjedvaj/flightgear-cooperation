<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

<model>
	<name>landing-light-normal</name>
	<path>Aircraft/harrier/Models/Lights/Normal/landing-light-norm.xml</path>
</model>

<model>
	<name>landing-light-rembrandt</name>
	<path>Aircraft/harrier/Models/Lights/Rembrandt/landing-light-remb.xml</path>
</model>

<animation>
	<type>select</type>
    	<object-name>landing-light-normal</object-name>
	<condition>
		<not>
			<property>/sim/rendering/rembrandt/enabled</property>
		</not>		
  	</condition>
</animation>

<animation>
	<type>select</type>
    	<object-name>landing-light-rembrandt</object-name>
	<condition>
		<property>/sim/rendering/rembrandt/enabled</property>		
  	</condition>
</animation>
 
</PropertyList>
