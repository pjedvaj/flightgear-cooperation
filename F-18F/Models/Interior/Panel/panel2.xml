<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <!-- GROUND MAP -->
  <model>
    <path>Instruments/map/map.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m> -0.000 </y-m>
      <z-m> -0.002 </z-m>
      <pitch-deg> -5 </pitch-deg>
    </offsets>
    <overlay>
      <animation n="100">
        <type>scale</type>
        <property>constants/zero</property>
        <x-offset> 2.0 </x-offset>
        <y-offset> 2.0 </y-offset>
        <z-offset> 2.0 </z-offset>
      </animation>
    </overlay>
  </model>

  <model>
    <name>pfd</name>
    <path>Instruments/pfd/boeing747-400-pfd-jw.xml</path>
    <offsets>
      <x-m> -0.000 </x-m>
      <y-m> -0.215 </y-m>
      <z-m> -0.001 </z-m>
      <pitch-deg>-5.0</pitch-deg>
    </offsets>
  </model>

  <model>
    <name>enav</name>
    <path>Instruments/pfd/boeing747-400-enav-jw.xml</path>
    <offsets>
      <x-m> -0.000 </x-m>
      <y-m>  0.215 </y-m>
      <z-m> -0.002 </z-m>
     <pitch-deg>-5.0</pitch-deg>
    </offsets>
  </model>

  <animation>
    <object-name>pfd</object-name>
    <object-name>enav</object-name>
    <type>scale</type>
    <x-offset>0.87</x-offset>
    <y-offset>0.87</y-offset>
    <z-offset>0.87</z-offset>
  </animation>

</PropertyList>
