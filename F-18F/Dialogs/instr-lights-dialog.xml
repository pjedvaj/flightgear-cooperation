<?xml version="1.0"?><PropertyList>  <name>instrlightlevel</name>  <layout>vbox</layout>  <text>    <label>Instruments lights level</label>    <valign>center</valign>    <halign>center</halign>  </text>  <hrule/>    <group>    <layout>hbox</layout>    <halign>center</halign>    <valign>top</valign>  	  <group>		<layout>vbox</layout>		<halign>left</halign>		<valign>top</valign>        <slider>          <x>10</x>          <y>50</y>          <width>200</width>          <property>/controls/lighting/instruments-norm</property>          <min>0</min>          <max>1</max>          <binding>            <command>dialog-apply</command>          </binding>        </slider>	</group>  </group>  <hrule/>  <group>    <layout>hbox</layout>    <empty><stretch>true</stretch></empty>    <button>      <legend>Close</legend>      <default>true</default>      <key>Esc</key>      <binding>        <command>dialog-close</command>      </binding>    </button>    <empty><stretch>true</stretch></empty>  </group></PropertyList>